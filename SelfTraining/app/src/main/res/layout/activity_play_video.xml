<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PlayVideoActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/playVideo_toolbar_id"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="#ffffff"
        app:title="Video"
        android:background="#ff9c11"
        >
    </android.support.v7.widget.Toolbar>
    <FrameLayout
    android:id="@+id/videoSurfaceContainer"
    android:layout_width="match_parent"
    android:layout_height="220dp">

    <SurfaceView
        android:id="@+id/videoSurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>

    <ScrollView
        android:id="@+id/play_video_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/play_video_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="Demo display long name video about yoga thumbnail in list "
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textStyle="bold" />


                        <TextView
                            android:id="@+id/play_video_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1,4 tr lượt xem"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:elevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/play_video_userImg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/img1"
                        app:civ_border_color="#000000"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:ellipsize="end"
                        android:id="@+id/play_video_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="17dp"
                        android:layout_toRightOf="@+id/play_video_userImg"
                        android:text="KietPT"
                        android:maxLines="1"

                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnUpSelfTrainVideo"
                        android:layout_width="170dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:background="@android:color/white"
                        android:drawableLeft="@drawable/ic_subscriptions"
                        android:drawablePadding="6dp"
                        android:gravity="start|center"
                        android:padding="2dp"
                        android:text="Đăng Video Tập Theo"
                        android:textColor="#FF0000"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        />


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/relate_video_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>


    </ScrollView>
</LinearLayout>