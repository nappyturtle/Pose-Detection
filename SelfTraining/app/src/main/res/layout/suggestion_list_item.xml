<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border_suggestion_item"
    android:layout_margin="5dp"
    android:padding="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/suggestionList_item_imageview"
                android:layout_width="150dp"
                android:layout_height="100dp"
                 />
            <ImageView
                android:id="@+id/suggestionList_item_play"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_play" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/suggestionList_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Động tác cơ bản dành cho dân văn phòng công sở"
                android:textColor="#080808"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/suggestionList_item_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="24/01/2018"
                android:textColor="#686868"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/suggestionList_item_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Đang xử lí"
                android:textColor="#686868"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>