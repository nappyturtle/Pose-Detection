<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/suggestionList_item_imageview"
            android:scaleType="fitXY"
            android:layout_width="150dp"
            android:layout_height="100dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <TextView
                android:id="@+id/suggestionList_item_name"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Động tác cơ bản dành cho dân văn phòng công sở"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="18sp"
                android:textColor="#080808"
                />
            <TextView
                android:id="@+id/suggestionList_item_date"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="24/01/2018"
                android:textSize="15sp"
                android:textColor="#686868" />
            <TextView
                android:id="@+id/suggestionList_item_status"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đang xử lí"
                android:textSize="15sp"
                android:textColor="#686868" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>