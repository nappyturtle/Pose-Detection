<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TraineeProfileActivity"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="#868683"
        app:title="Thông tin tài khoản"
        android:id="@+id/toolbar_trainee_profile_id"
        >

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_trainee_profile_id"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/userlogin"
            app:civ_border_color="#da43da"
            app:civ_border_width="2dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="10"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/txtUsername_trainee_profile_id"
                android:layout_weight="9"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="15sp"
                android:textColor="#000000"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/imgSetting_trainee_profile_id"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_settings"
                />
        </LinearLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/ln_traineeProfile_getAllSuggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="10"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_weight="3"
                    android:background="@drawable/recommendation" />
                <TextView
                    android:layout_weight="7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Danh sách kết quả video tự tập"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/btnGetAllSuggestion_trainee_profile_id"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text="Xem tất cả"
                android:textSize="15sp"
                android:textColor="#252ed9"
                android:textStyle="bold"
                />
        </LinearLayout>
        <View
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/ln_traineeProfile_getAllBoughtCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="10"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                >
                <ImageView
                    android:layout_weight="3"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/recommendation"
                    />
                <TextView
                    android:layout_weight="7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Danh sách các khoá học đã mua"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/btnGetAllBoughtVideo_trainee_profile_id"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:text="Xem tất cả"
                android:textSize="15sp"
                android:textColor="#252ed9"
                android:textStyle="bold"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>