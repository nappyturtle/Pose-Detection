<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:background="@android:color/black"
        android:padding="1dp">

        <ImageView
            android:id="@+id/iv_course__bought_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.8"
                android:background="@android:color/black"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_bought_video_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="50"
                    android:textColor="@android:color/white"
                    android:layout_marginVertical="5dp"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginVertical="5dp"
                    android:text="video"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv__bought_course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Course Name is too long to fix in this space!"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_bought_trainer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:gravity="center_vertical"
            android:text="vuvg"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bought_course_created_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:gravity="center_vertical"
                android:text="10 ngày trước"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginHorizontal="10dp"-->
                <!--android:text="-" />-->

            <!--<TextView-->
                <!--android:id="@+id/tv_bought_course_regis_quantity"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginVertical="1dp"-->
                <!--android:gravity="center_vertical"-->
                <!--android:text="20 lượt đăng kí"-->
                <!--android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtPrice_item_bought_course"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="1dp"
                android:gravity="center_vertical"
                android:text="Đã mua"
                android:textColor="#f73e01"
                android:textSize="16sp"
                android:textStyle="bold"
                />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>