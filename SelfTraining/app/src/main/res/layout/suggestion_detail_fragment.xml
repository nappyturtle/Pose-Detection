<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ln_suggestionDetail_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:text="Hình từ video của bạn"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#000000"
            />

        <ImageView
            android:id="@+id/suggestionDetail_imageView_id_trainee"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:text="Hình từ video mẫu của chúng tôi"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#000000"
            />

        <ImageView
            android:id="@+id/suggestionDetail_imageView_id_trainer"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />



            <ExpandableListView
                android:nestedScrollingEnabled="true"
                android:id="@+id/expandable_listview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:childDivider="#b6b6b5"
                android:dividerHeight="1dp"
                android:scrollbars="none"></ExpandableListView>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>